<HomeScreen>:
    name : "home"
    MDNavigationLayout:
        ScreenManager:
            id: screen_manager
            MDScreen
                MDBoxLayout:
                    orientation: 'vertical'
                    MDTopAppBar:
                        id: toolbar
                        title: "Page d'accueil"
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                        elevation: 12 
                    MDFloatLayout:
                        Button:
                            text: "Insertion"
                            size_hint: .35, .35
                            background_color: 0, 0, 0, 0
                            font_name: "./Fonts/dollie.ttf"
                            font_size: "23sp"
                            pos_hint: {"center_x":.5, "center_y":.45}
                            color: rgba(255, 255, 255, 255)
                            on_release:
                                root.manager.transition.direction = "left"
                                app.Encodage()
                            canvas.before:
                                Color:
                                    rgb: rgba(0, 183, 231, 1)
                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos
                                    radius: [15]
                    MDFloatLayout:
                        Button:
                            text: "Extraction"
                            size_hint: .35, .35
                            background_color: 0, 0, 0, 0
                            font_name: "./Fonts/dollie.ttf"
                            font_size: "23sp"
                            pos_hint: {"center_x":.5, "center_y":.300}
                            color: rgba(255, 255, 255, 255)
                            on_release:
                                root.manager.transition.direction = "left"
                                app.Decodage()
                            canvas.before:
                                Color:
                                    rgb: rgba(0, 183, 231, 1)
                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos
                                    radius: [15]
                    MDBottomAppBar:
                        MDTopAppBar:
                            id: appbar
                            title:"Jofama"
                            type: 'bottom'
                            icon: 'home'
                            left_action_items: [["account-group", lambda x: x]]
                            on_action_button: None
                            mode : "center"
                    Widget:
        MDNavigationDrawer:
            id: nav_drawer
            MDBoxLayout:
                orientation: 'vertical'
                MDLabel:
                    text:"      Menu"
                    font_style: "Subtitle1"
                    font_name: "./Fonts/dollie.ttf"
                    size_hint_y: None
                    color: 0,0,1,1
                    font_size: "30sp"
                ScrollView:
                    MDList:
                        OneLineIconListItem:
                            text:"[font=./Fonts/Italic.ttf][size=14]Encoder[/size][/font]"
                            on_press:
                                nav_drawer.set_state("close")
                                root.manager.current = "encodage"
                            IconLeftWidget:
                                icon:"lock"
                        OneLineIconListItem:
                            text:"[font=./Fonts/Italic.ttf][size=14]Decoder[/size][/font]"
                            on_press:
                                nav_drawer.set_state("close")
                                root.manager.current = "decodage"
                            IconLeftWidget:
                                icon:"lock-open-variant"
                        OneLineIconListItem:
                            text:"[font=./Fonts/Italic.ttf][size=14]Apropos[/size][/font]"
                            on_press:
                                nav_drawer.set_state("close")
                                app.apropos()
                            IconLeftWidget:
                                icon:"account"   
                        OneLineIconListItem:
                            text:"[font=./Fonts/Italic.ttf][size=14]Quitter[/size][/font]"
                            on_press:
                                nav_drawer.set_state("close")
                                app.quitter()
                            IconLeftWidget:
                                icon:"logout"           
            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer

